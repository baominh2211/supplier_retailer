# =================================
# B2B Marketplace - Backend Configuration
# =================================

# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/b2b_marketplace
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-key-at-least-32-characters-long-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=B2B Marketplace <noreply@b2bmarket.com>

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# For S3 storage (production):
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application
APP_NAME=B2B Marketplace
FRONTEND_URL=http://localhost:3000
